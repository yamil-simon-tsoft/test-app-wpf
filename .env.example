# Variables de entorno de ejemplo para el proyecto

# Configuración de WinAppDriver
WINAPPDRIVER_URL=http://127.0.0.1:4723

# Ruta de la aplicación WPF a automatizar
APP_PATH=C:\Path\To\Your\WPF\Application.exe

# Configuración de timeouts (en segundos)
IMPLICIT_WAIT=10
EXPLICIT_WAIT=20
PAGE_LOAD_TIMEOUT=30

# Configuración de reportes
REPORTS_DIR=reports
SCREENSHOTS_DIR=reports/screenshots

# Configuración de logging
LOG_LEVEL=INFO
LOG_FILE=reports/automation.log

# Configuración de ejecución
HEADLESS=false
RETRY_COUNT=3

# Configuración específica para pruebas
TEST_ENVIRONMENT=local
BROWSER_MAXIMIZE=true

# Configuración de base de datos (si aplica)
DB_CONNECTION_STRING=Data Source=test.db;Version=3;

# Configuración de Allure (si se usa)
ALLURE_RESULTS_DIR=reports/allure-results
ALLURE_REPORTS_DIR=reports/allure-reports

# Configuración de paralelización
MAX_WORKERS=4
PYTEST_WORKERS=auto
